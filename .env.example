# AWS Configuration
AWS_ACCOUNT_ID=123456789012
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# ECR Configuration
ECR_REPOSITORY=ecs-demo-app
ECR_REGISTRY=${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com

# ECS Configuration
ECS_CLUSTER=demo-cluster
ECS_SERVICE=demo-service
ECS_TASK_DEFINITION=ecs-demo-app
ECS_TASK_FAMILY=ecs-demo-app

# VPC Configuration (update with your values)
VPC_ID=vpc-xxxxx
SUBNET_1=subnet-xxxxx
SUBNET_2=subnet-xxxxx
SECURITY_GROUP=sg-xxxxx

# Application Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Container Configuration
CONTAINER_CPU=256
CONTAINER_MEMORY=512
DESIRED_COUNT=2
